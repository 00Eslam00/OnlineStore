@model Product


<input asp-for="SellerId" hidden value="@ViewBag.Id" />
<div class="mb-2">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" value="@Model?.Name">
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="mb-2">
    <label asp-for="UnitPrice" class="form-label"></label>
    <input asp-for="UnitPrice" class="form-control" value="@Model?.UnitPrice">
    <span asp-validation-for="UnitPrice" class="text-danger"></span>
</div>

<div class="mb-2">
    <label asp-for="Quantity" class="form-label"></label>
    <input asp-for="Quantity" class="form-control" value="@Model?.Quantity">
    <span asp-validation-for="Quantity" class="text-danger"></span>
</div>

<div class="mb-2">
    <label asp-for="Description" class="form-label"></label>
    <input asp-for="Description" class="form-control" value="@Model?.Description">
    <span asp-validation-for="Description" class="text-danger"></span>
</div>


<div class="mb-2">
    <label asp-for="Discount" class="form-label"></label>
    <input asp-for="Discount" class="form-control" value="@Model?.Discount">
    <span asp-validation-for="Discount" class="text-danger"></span>
</div>

<div class="mb-2">
    <label asp-for="Category" class="form-label"></label>
    <input asp-for="Category" class="form-control" value="@Model?.Category">
    <span asp-validation-for="Category" class="text-danger"></span>
</div>



